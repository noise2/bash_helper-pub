#!/bin/bash

# level#1 aliases
alias push='git push $*'
alias co='git checkout $*'
alias tags='git describe'
alias tag='git tag -l -n1 $*'
alias merge='git merge $*'
alias pull='git pull $*'
alias stash='git stash $*'
alias add='git add $*'
alias commit='git commit $*'
alias pall='git push $*; git push --tags'
alias stash='git stash $*'
alias branch='git branch $*'
alias clone='git clone $*'
alias log='git log --graph --decorate --pretty=format:"%C(yellow)%h%Creset %C(green)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit --decorate --date-order --color $*'
alias status='git status $*'
alias rmt='find . -name "*~" -print0 | xargs -0 rm -vrf'

# level#2 aliases
alias mp='git checkout master && git merge develop --no-edit && git checkout develop'
alias d='git checkout develop'
alias m='git checkout master'
alias p='git push $*'
alias pt='git push $* --tags'
alias t='git checkout master && git tag $*'
alias a='git add -A :/'
alias c='git commit -qam $*'
alias s='git status'
alias diff='git diff $*'
alias show='git show $*'
alias ap='git commit -qa --amend && git push -f'
alias l='log | head -n 5'
alias b='git branch $*'